<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_external_layout_boxed" inherit_id="web.external_layout_boxed">

        <!-- Replace the Header with an Image -->
        <xpath expr="//div[@class='o_boxed_header']" position="replace">
            <div class="o_boxed_header" style="padding: 0; margin: 0;">
                <img src="/dimofinif_doc/static/src/img/header.png"
                     alt="Header Image"
                     style="width: 100%; height: auto;" />
            </div>
        </xpath>

        <!-- Replace the Footer with an Image -->
        <xpath expr="//div[@class='text-center']" position="replace">
            <div style="padding: 0; margin: 0; position: absolute; bottom: 0; width: 100%;">
                <img src="/dimofinif_doc/static/src/img/footer.png"
                     alt="Footer Image"
                     style="width: 100%; height: auto;" />
            </div>
        </xpath>

    </template>
</odoo>
