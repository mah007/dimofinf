
<odoo>
    <record id="view_cpanel_backup_tree" model="ir.ui.view">
        <field name="name">cpanel.backup.tree</field>
        <field name="model">cpanel.backup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="size"/>
            </tree>
        </field>
    </record>

    <record id="view_cpanel_backup_form" model="ir.ui.view">
        <field name="name">cpanel.backup.form</field>
        <field name="model">cpanel.backup</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="size"/>
                        <field name="server_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
