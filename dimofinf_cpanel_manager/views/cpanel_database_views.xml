
<odoo>
    <record id="view_cpanel_database_tree" model="ir.ui.view">
        <field name="name">cpanel.database.tree</field>
        <field name="model">cpanel.database</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user"/>
                <field name="domain"/>
            </tree>
        </field>
    </record>

    <record id="view_cpanel_database_form" model="ir.ui.view">
        <field name="name">cpanel.database.form</field>
        <field name="model">cpanel.database</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user"/>
                        <field name="password"/>
                        <field name="domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
