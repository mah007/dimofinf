
<odoo>
    <record id="view_cpanel_file_tree" model="ir.ui.view">
        <field name="name">cpanel.file.tree</field>
        <field name="model">cpanel.file</field>
        <field name="arch" type="xml">
            <tree>
                <field name="path"/>
                <field name="size"/>
                <field name="permission"/>
            </tree>
        </field>
    </record>

    <record id="view_cpanel_file_form" model="ir.ui.view">
        <field name="name">cpanel.file.form</field>
        <field name="model">cpanel.file</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="path"/>
                        <field name="size"/>
                        <field name="permission"/>
                        <field name="server_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
