
<odoo>
    <record id="view_cpanel_package_tree" model="ir.ui.view">
        <field name="name">cpanel.package.tree</field>
        <field name="model">cpanel.package</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="disk_space"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="view_cpanel_package_form" model="ir.ui.view">
        <field name="name">cpanel.package.form</field>
        <field name="model">cpanel.package</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="disk_space"/>
                        <field name="max_databases"/>
                        <field name="max_email_accounts"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
